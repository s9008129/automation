#!/bin/sh
# pre-commit hook — Implemented T-05 by claude-opus-4.6 on 2026-02-10
# Runs PowerShell script to scan recordings for sensitive data

if command -v pwsh >/dev/null 2>&1; then
    pwsh -NoProfile -ExecutionPolicy Bypass -File scripts/pre-commit-scan.ps1
elif command -v powershell >/dev/null 2>&1; then
    powershell -NoProfile -ExecutionPolicy Bypass -File scripts/pre-commit-scan.ps1
elif command -v bash >/dev/null 2>&1; then
    bash scripts/pre-commit-scan.sh
else
    echo "⚠️  PowerShell not found, skipping pre-commit scan"
    exit 0
fi
